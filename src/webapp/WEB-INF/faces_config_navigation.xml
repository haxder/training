<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
    version="2.2">
	<navigation-rule>
		<display-name>index.xhtml</display-name>
		<from-view-id>/index.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>MOVIES</from-outcome>
			<to-view-id>/resource/views/movies.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<display-name>resource/views/movies.xhtml</display-name>
		<from-view-id>/resource/views/movies.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>DETAILS</from-outcome>
			<to-view-id>/resource/views/movieDetail.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>   
</faces-config>
